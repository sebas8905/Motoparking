<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.acktos.motoparking.CalificateActivity">

    <!-- Name -->

    <TextView
        android:id="@+id/parking_label_name"
        android:text="@string/label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:id="@+id/separator"
        android:visibility="visible"
        android:layout_below="@id/parking_label_name"
        android:background="@android:color/holo_blue_light"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/field_name"
        android:layout_below="@+id/separator"
         />

    <!-- Comment -->

    <TextView
        android:id="@+id/parking_label_comment"
        android:text="@string/label_comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/field_name"
        android:paddingTop="16dp"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:id="@+id/separator2"
        android:visibility="visible"
        android:layout_below="@id/parking_label_comment"
        android:background="@android:color/holo_blue_light"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/field_comment"
        android:layout_below="@+id/separator2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- Calification -->

    <TextView
        android:id="@+id/parking_label_calification"
        android:text="@string/label_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/field_comment"
        android:paddingTop="16dp"
        android:textStyle="bold" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:id="@+id/separator3"
        android:visibility="visible"
        android:layout_below="@id/parking_label_calification"
        android:background="@android:color/holo_blue_light"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/field_calification"
        android:layout_below="@+id/separator3"
        android:stepSize="1.0"
        android:paddingTop="16dp"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
